<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvColSortDate"
        style="@style/style_text_itemlistview"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Date"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvColDocno"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvColDocno"
        style="@style/style_text_itemlistview"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginTop="2dp"
        android:text="Docno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvColCustname"
        style="@style/style_text_itemlistview"
        android:layout_marginTop="2dp"

        android:text="CSName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvColDocno"
        app:layout_constraintTop_toBottomOf="@+id/tvColDocno" />

</androidx.constraintlayout.widget.ConstraintLayout>